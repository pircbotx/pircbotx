<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%X{pircbotx.id}-%X{pircbotx.server}] [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.testng" level="INFO"/>

	<root level="ALL">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>